<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false">
    <transition-include name="getGlAccountListPaginated" location="component://SimpleScreens/template/account/AccountTransitions.xml"/>
    <transition-include name="searchPartyList" location="component://SimpleScreens/template/party/PartyForms.xml"/>
    <actions>
        <set field="glAccountCodeMask" from="ec.user.getPreference('GlAccountCodeMask')"/>
        <set field="accountCodeFormatter" from="masker(glAccountCodeMask, '0')"/><!-- will be null if no mask -->
    </actions>
    <widgets>
        <form-list name="StoreCreditList" list="acctgTransEntryList" skip-form="true" header-dialog="true"
           select-columns="true" saved-finds="true" show-csv-button="true" extends="component://SimpleScreens/screen/SimpleScreens/Accounting/Transaction/FindGiftCardsAndStoreCredit.xml#GiftCardsAndStoreCreditList">
           <entity-find entity-name="mantle.account.financial.FinancialAccountAndTransSummary" list="acctgTransList">
                <search-form-inputs default-order-by="-transactionDate">
                    <default-parameters transactionDate_poffset="-1" transactionDate_period="30d" finAccountTypeId="CustomerCredit"/>
                </search-form-inputs>
            </entity-find>
        </form-list>
    </widgets>
</screen>
