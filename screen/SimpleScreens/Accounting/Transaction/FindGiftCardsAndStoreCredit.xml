<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false">
    <transition-include name="getGlAccountListPaginated" location="component://SimpleScreens/template/account/AccountTransitions.xml"/>
    <transition-include name="searchPartyList" location="component://SimpleScreens/template/party/PartyForms.xml"/>
    <actions>
        <set field="glAccountCodeMask" from="ec.user.getPreference('GlAccountCodeMask')"/>
        <set field="accountCodeFormatter" from="masker(glAccountCodeMask, '0')"/><!-- will be null if no mask -->
    </actions>
    <widgets>
        <form-list name="GiftCardsAndStoreCreditList" list="acctgTransEntryList" skip-form="true" header-dialog="true"
                   select-columns="true" saved-finds="true" show-csv-button="true">
             <entity-find entity-name="mantle.account.financial.FinancialAccountAndTransSummary" list="acctgTransList">
                <search-form-inputs default-order-by="-transactionDate">
                    <default-parameters transactionDate_poffset="-1" transactionDate_period="30d"/>
                    <default-parameters finAccountTypeId="CustomerCredit"/>
                    </search-form-inputs>
            </entity-find>
            <!-- List Column -->
            <field name="otherPartyId">
                <header-field title="Client"><drop-down allow-empty="true">
                    <dynamic-options transition="searchPartyList" server-search="true" min-length="2"/></drop-down></header-field>
                <default-field><link url="editParty" link-type="anchor" parameter-map="[partyId:otherPartyId]"
                        entity-name="mantle.party.PartyDetail" text="PartyNameTemplate" condition="otherPartyId"/></default-field>
            </field>
            <field name="organizationPartyId">
                <header-field title="Client Internal ID"><drop-down allow-empty="true">
                    <entity-options key="${partyId}" text="PartyNameTemplate"> <entity-find entity-name="mantle.party.PartyDetailAndRole">
                        <econdition field-name="roleTypeId" value="OrgInternal"/>
                        <econdition field-name="disabled" value="N" or-null="true"/>
                        <order-by field-name="organizationName"/>
                    </entity-find></entity-options>
                </drop-down></header-field>
                <default-field><link url="editParty" link-type="anchor" parameter-map="[partyId:organizationPartyId]"
                        entity-name="mantle.party.PartyDetail" text="PartyNameTemplate"/></default-field>
            </field>
            <field name="transactionDate"><header-field title="Date Credited/Debited" show-order-by="true"><date-period/></header-field>
                <default-field><display/></default-field>
            </field>
            <field name="finAccountCode"><header-field title="Gift Card"><text-find size="20" hide-options="true"/></header-field>
                <default-field><display/></default-field></field>
            <field name="orderId"><header-field title="Order" show-order-by="true"><text-find size="20" hide-options="ignore-case"/></header-field>
                <default-field><link url="editInvoice" text="${invoiceId}" link-type="anchor" condition="orderId"/></default-field></field>
            <field name="acctgTransId"><header-field show-order-by="true" title="Internal TX ID"><text-find hide-options="true" default-operator="begins"/></header-field>
                <default-field><link url="editTransaction" text="${acctgTransId}" link-type="anchor"/></default-field></field>
            <field name="ownerPartyId"><header-field title="Customer Name"></header-field><default-field><display/></default-field></field>
            <field name="finAccountTypeId"><header-field title="Account Type"></header-field><default-field><display/></default-field></field>
            <field name="reasonEnumId">
                <header-field title="Transction Reason" show-order-by="true">
                    <widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#enumDropDown">
                        <set field="enumTypeId" value="FinancialAccountTransReason"/>
                        <set field="allowMultiple" value="true"/>
                        <set field="allowEmpty" value="true"/></widget-template-include>
                </header-field>
                <default-field><display-entity entity-name="moqui.basic.StatusItem"/></default-field>
            </field>
            <field name="reasonEnumId"><header-field title="Transction Reason"></header-field><default-field><display/></default-field></field>
            <field name="amount" align="right" show-total="sum"><header-field title="Credited/Debit Amount" show-order-by="true"><range-find size="15"/></header-field>
                <default-field><display format="#,##0"/></default-field></field>
            <field name="find"><header-field title="Find"><submit/></header-field></field>
            <!-- List Column -->
            <form-list-column><field-ref name="otherPartyId"/></form-list-column>
            <form-list-column><field-ref name="organizationPartyId"/></form-list-column>
            <form-list-column><field-ref name="transactionDate"/></form-list-column>
            <form-list-column><field-ref name="finAccountCode"/></form-list-column>
            <form-list-column><field-ref name="orderId"/></form-list-column>
            <form-list-column><field-ref name="acctgTransId"/></form-list-column>
            <form-list-column><field-ref name="ownerPartyId"/></form-list-column>
            <form-list-column><field-ref name="finAccountTypeId"/></form-list-column>
            <form-list-column><field-ref name="reasonEnumId"/></form-list-column>
            <form-list-column><field-ref name="amount"/></form-list-column>
        </form-list>
    </widgets>
</screen>
